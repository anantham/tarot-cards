# Web3.Storage Credentials (keep real secrets in .env.local only)
WEB3_STORAGE_AGENT_KEY=YOUR_MULTIBASE_KEY_HERE
WEB3_STORAGE_DELEGATION_PROOF=YOUR_BASE64_ENCODED_DELEGATION_HERE

# Client defaults exposed to browser (VITE_* only)
VITE_OPENROUTER_API_KEY=sk-or-...
VITE_OPENROUTER_API_ENDPOINT=https://openrouter.ai/api/v1/chat/completions
VITE_GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# Server-side Gemini key for /api/proxy (never expose as VITE_*)
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# Supabase community gallery (server-side only)
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY
SUPABASE_BUCKET=tarotcards
SUPABASE_PUBLIC_BASE_URL=https://YOUR_PROJECT.supabase.co/storage/v1/object/public/tarotcards

# Upload hardening controls
# Optional token gate: if set, provide it via Authorization: Bearer <token> or x-upload-token
UPLOAD_API_TOKEN=
# Comma-separated host allowlist for remote video fetches
UPLOAD_FETCH_HOST_ALLOWLIST=generativelanguage.googleapis.com,storage.googleapis.com,googleapis.com,googleusercontent.com
# Limits and abuse controls
UPLOAD_MAX_CARDS=4
UPLOAD_MAX_SINGLE_ASSET_BYTES=6000000
UPLOAD_MAX_TOTAL_ASSET_BYTES=18000000
UPLOAD_RATE_WINDOW_MS=60000
UPLOAD_RATE_MAX_REQUESTS=15

# Vercel KV (auto-populated in production by Vercel)
KV_REST_API_URL=https://YOUR_KV_INSTANCE.kv.vercel-storage.com
KV_REST_API_TOKEN=YOUR_KV_TOKEN_HERE

# Vercel Cron keepalive auth (used by /api/keepalive via Authorization: Bearer <CRON_SECRET>)
CRON_SECRET=GENERATE_A_LONG_RANDOM_SECRET
